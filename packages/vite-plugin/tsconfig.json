{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "lib": ["esnext"],
    "declaration": true, 
    "declarationDir": "dist",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"]
    },
  },
  "exclude": ["**/node_modules/**", "dist", "example"]
}
